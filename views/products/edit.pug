extends ../layout

block content
    h1 Edit Product
    form(action="/products/edit/"+product._id,method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control", name="name", value=product.name)
        .form-group
            label(for="price") Product Price
            input#price(type="text", class="form-control", name="price", value=product.price)
        .form-group
            label(for="soldout") Sold Out
            input#availability(type="text", class="form-control", name="soldout", value=product.soldout)
        .form-group
            label(for="brand") Product Brand
            input#brand(type="text", class="form-control", name="brand", value=product.brand)
        input(type="submit", class="btn btn-info")